@{
    ViewData["Title"] = "Portfolio";
}
@{
}
@model Portfolio.ViewModels.ProjectViewModel


<main class="main">

    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Portfolio</h1>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- End Page Title -->
    <!-- Portfolio Section -->
    <section id="portfolio" class="portfolio section">

        <div class="container">

            <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
                <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                    @foreach (var project in Model.projects)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-item isotope-item">
                            <div class="portfolio-content h-100">
                                <img src="@project.imagePath" class="img-fluid" alt="" style="height:250px">
                                <div class="portfolio-info">
                                    <h4>@project.projectName</h4>
                                    <p>@project.projectBrief</p>
                                    <a href="@project.imagePath" title="App 1" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                    <a href="@project.gitHubLink" title="More Details" class="details-link" target="_blank"><i class="bi bi-link-45deg"></i></a>
                                </div>
                            </div>
                        </div><!-- End Portfolio Item -->
                    }
                     

                </div><!-- End Portfolio Container -->

            </div>

        </div>

    </section><!-- /Portfolio Section -->

</main>

